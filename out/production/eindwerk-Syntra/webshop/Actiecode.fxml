<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="webshop.SidebarController"
            prefHeight="400.0" prefWidth="600.0" styleClass="classCenter">

    <center>
        <VBox spacing="8">
            <Text text="Actiecodes" styleClass="header"/>
            <HBox spacing="10">
                <Button text="Create"/>
                <Button text="View"/>
            </HBox>
            <HBox spacing="10">
                <Label text="ID: " />
                <TextField fx:id="txtid" promptText="ID" />
            </HBox>
            <HBox spacing="10">
                <Label text="Actiecode: " />
                <TextField fx:id="txtActiecode" promptText="ActieCode" />
            </HBox>
            <HBox spacing="10">
                <Label text="Korting: " />
                <TextField fx:id="txtKorting" promptText="Korting" />
            </HBox>
            <HBox spacing="10">
                <Label text="Geldig van: " />
                <DatePicker fx:id="datumVan" layoutX="20" layoutY="20" />            </HBox>
            <HBox spacing="10">
                <Label text="Geldig tot: " />
                <DatePicker fx:id="datumTot" layoutX="20" layoutY="20" />            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="8">
            <Button text="Opslaan"/>
            <Button text="Cancel"/>
        </HBox>


    </bottom>
</BorderPane>
