<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="webshop.CategorieController"
            prefHeight="400.0" prefWidth="600.0" fx:id="pane">

    <center>
        <VBox spacing="8">
            <Text text="Categorie Toevoegen" styleClass="header"/>

            <HBox spacing="10">
                <Label text="ID:" />
                <TextField fx:id="txtid" promptText="ID" />
            </HBox>
            <HBox spacing="10">
                <Label text="Naam categorie: " />
                <TextField fx:id="txtCategorie" promptText="Naam categorie" />
            </HBox>
            <HBox spacing="8">
                <Button text="Opslaan" onAction="#catOpslaan"/>
                <Button text="Annuleren" onAction="#catAnnuleren"/>
            </HBox>
            <Label fx:id="txtbevestiging" styleClass="classlabel"/>
        </VBox>
    </center>

</BorderPane>
